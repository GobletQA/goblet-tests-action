{
  "name": "goblet-tests-action",
  "version": "0.0.0",
  "description": "Execute goblet tests in a Github action",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/GobletQA/goblet-tests-action.git"
  },
  "engines": {
    "node": ">=16.15.0",
    "yarn": ">=1.22.19"
  },
  "homepage": "https://github.com/GobletQA/goblet-tests-action",
  "author": "Lance Tipton <lancetipton04@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "tsc --project ./tsconfig.json",
    "clean": "rimraf -rf ./dist",
    "clean:nm": "rm -rf ./node_modules",
    "clean:full": "yarn clean && yarn clean:nm",
    "format": "yarn format:pretty && yarn format:lint",
    "format:lint": "yarn lint .",
    "format:pretty": "yarn pretty .",
    "lint": "eslint --color --cache --fix --quiet --ignore-path .eslintignore --config ./configs/eslintrc.config.js",
    "pretty": "prettier --ignore-path .prettierignore --config ./configs/prettier.config.js -w",
    "test": "jest --colors --config ./configs/jest.config.js --maxWorkers=2",
    "test:ci": "jest --colors --coverage --config ./configs/jest.config.js",
    "test:watchAll": "jest --watchAll --coverage --config ./configs/jest.config.js",
    "test:watch": "jest --watch --coverage --config ./configs/jest.config.js",
    "validate": "tsc --noEmit"
  },
  "dependencies": {
    "@keg-hub/jsutils": "9.0.3",
    "@keg-hub/parse-config": "2.0.1",
    "alias-hq": "5.3.2",
    "axios": "0.26.1",
    "tsconfig-paths": "3.12.0"
  },
  "devDependencies": {
    "@commitlint/cli": "16.1.0",
    "@commitlint/config-conventional": "16.0.0",
    "@typescript-eslint/eslint-plugin": "5.10.1",
    "@typescript-eslint/parser": "5.10.1",
    "commitizen": "4.2.4",
    "cz-conventional-changelog": "3.3.0",
    "@types/debug": "4.1.5",
    "@types/jest": "27.4.1",
    "@types/node": "16.11.0",
    "eslint": "8.7.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-import-resolver-typescript": "2.5.0",
    "eslint-plugin-import": "2.25.4",
    "eslint-plugin-jest": "26.0.0",
    "eslint-plugin-react": "7.28.0",
    "eslint-plugin-react-hooks": "4.3.0",
    "husky": "7.0.4",
    "jest": "27.4.5",
    "ts-jest": "27.1.3",
    "ts-node": "10.4.0",
    "lint-staged": "12.3.4",
    "prettier": "2.5.1",
    "rimraf": "3.0.2",
    "typescript": "4.7.3"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "**/*": [
      "yarn pretty",
      "yarn lint"
    ]
  }
}
